---
type Props = {
  links: {
    href: string;
    label: string;
    target?: "_self" | "_blank" | "_parent" | "_top";
    description?: string;
  }[];
};

const { links } = Astro.props;
---

<ul>
  {
    links.map((l) => {
      return (
        <li>
          <a href={l.href} target={l.target ?? "_blank"}>
            {l.label}
          </a>
          {l.description !== undefined ? `- ${l.description}` : ""}
        </li>
      );
    })
  }
</ul>
