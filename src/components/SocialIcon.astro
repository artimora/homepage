---
import { isIcon, type Icons } from "@/lib/socials";
import { CircleQuestionMark, Instagram, Mail, Twitter } from "@lucide/astro";

type Props = {
  icon: string;
};

const { icon } = Astro.props as { icon: Icons };
---

{!isIcon(icon) && <CircleQuestionMark size={20} class="icon" />}
{icon === "twitter" && <Twitter size={20} class="icon" />}
{icon === "instagram" && <Instagram size={20} class="icon" />}
{icon === "email" && <Mail size={20} class="icon" />}
